<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Custom Listeners in TestNG">

	<!-- Using Groups to provide options to run tests in a particular group only -->

	<groups>

		<run>
			<include name="Regression"></include>
		</run>

	</groups>


	<!-- Providing Listeners class with the '<listeners>' tag, to include listeners  !-->

	<listeners>

		<listener class-name="CustomListeners.Listeners"></listener>

	</listeners>

<!-- Test 1st -->
	<test name="User Reg and login Test">

		<classes>

			<class name="rough.TestCase01" />

		</classes>

	</test> 

<!-- Test 2nd -->
	<test name="Failure Test for testing Listeners">

		<classes>

			<class name="CustomListeners.TestFailure" />

		</classes>

	</test> 

<!-- Test 3rd -->
	<test name="Go to Home page and Next page test">

		<classes>

			<class name="rough.TestCase02" />

		</classes>

	</test> 

<!-- Test 4th -->
	<test name="Regression test cases Test">

		<classes>

			<class name="rough.TestCase03" />

		</classes>

	</test> <!-- Test -->

</suite> <!-- Suite -->