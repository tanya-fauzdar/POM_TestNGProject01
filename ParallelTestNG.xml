<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Testing Parallel Suite" parallel = "tests"> <!-- We are Giving the argument 'parallel' in suite tag to run the 
tests inparallel. Otherwise these tests run in sequence of providing inside this xml file -->

	<test name="Parallel Test1: FireFox Test">
		<parameter name="browser" value="firefox"></parameter>
		<parameter name="env" value="qa"></parameter>

		<classes>
			<class name="parallelTest.TestBrowser" />
		</classes>
	</test>

	<test name="Parallel Test2: Chrome Test">
		<parameter name="browser" value="chrome"></parameter>
		<parameter name="env" value="uat"></parameter>

		<classes>
			<class name="parallelTest.TestBrowser" />
		</classes>
	</test>

</suite> <!--  Suite  -->